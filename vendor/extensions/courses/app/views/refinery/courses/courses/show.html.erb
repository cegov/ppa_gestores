<div class="span3 well sidebar-nav">	
	<ul class="nav nav-list">			
		<li class="nav-header">Cursos oferecidos:</li>
		<% @courses.each do |course| %>
			<li><%= link_to course.name, refinery.courses_course_path(course) %></li>
		<% end %>  
	</ul>
</div>

<div class="span9">	
  <h2><%=raw @course.name %></h2>
  <% if !@course.teacher_name.blank? %>
	  <section>    
	  	<p>Professor responsável: <%=raw @course.teacher_name %></p>
	  </section>
  <% end %>
  <% if !@course.description.blank? %>
	  <section>
	  	<h3>Descrição:</h3>
	  	<div>
		    <p>
		      <%=raw @course.description %>
		    </p>
		</div>
	  </section>
  <% end %>	   
  <% if !@course.classes_start_on.blank? or !@course.classes_end_on.blank? %>
	  <section> 
	  	<h3>Quando será o curso?</h3>
	  	<% if !@course.classes_start_on.blank? and !@course.classes_end_on.blank? %>    
	    	<p>De <%=raw @course.classes_start_on.strftime("%d/%m/%Y") %> a <%=raw @course.classes_end_on.strftime("%d/%m/%Y") %></p>
	    <% if !@course.classes_start_on.blank? %>
	    	<p>Início das aulas: <%=raw @course.classes_start_on.strftime("%d/%m/%Y") %></p>
	    <% if !@course.classes_end_on.blank? %>
	    	<p>Término das aulas: <%=raw @course.classes_end_on.strftime("%d/%m/%Y") %></p>
	    <% end %>
	  </section>
   <% end %>
   <% if !@course.duration.blank? %>
	  <section>
	    <h3>Duração do curso:</h3>
	    <p><%=raw @course.duration %></p>
	  </section>
   <% end %>
</div>