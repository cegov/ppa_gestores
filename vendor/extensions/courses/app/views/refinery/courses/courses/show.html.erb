<div class="span3 well sidebar-nav">	
	<ul class="nav nav-list">			
		<li class="nav-header">Cursos oferecidos:</li>
		<% @courses.each do |course| %>
			<li><%= link_to course.name, refinery.courses_course_path(course) %></li>
		<% end %>  
	</ul>
</div>

<div class="span9">	
  <h2><%=raw @course.name %></h2>
  <section>    
  	<p>Professor responsável: <%=raw @course.teacher_name %></p>
  </section>
  <section>
  	<h3>Descrição:</h3>
  	<div>
	    <p>
	      <%=raw @course.description %>
	    </p>
	</div>
  </section> 
  <section> 
  	<h3>Quando será o curso?</h3>    
    <p>
    	<% I18n.locale = "pt-BR" %>
      De <%=raw @course.classes_start_on.strftime("%d/%m/%Y") %> a <%=raw @course.classes_end_on.strftime("%d/%m/%Y") %> 
    </p>
  </section>
   <section>
    <h3>Duração do curso:</h3>
    <p>
      <%=raw @course.duration %>
    </p>
  </section> 
</div>